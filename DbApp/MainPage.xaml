<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DbApp.MainPage">
    <StackLayout>
        <Entry
            x:Name="fNameEntry"
            Grid.Row="0"
            Grid.Column="0"
            Placeholder="First name"/>
        <Entry
            x:Name="lNameEntry"
            Grid.Row="0"
            Grid.Column="1"
            Placeholder="Last name"/>
        <Button
            Clicked="addWorker_Click"
            Text="Add student"
            Grid.Row="2"
            Grid.ColumnSpan="2"/>
        <StackLayout x:Name="workersStack"/>
    </StackLayout>

</ContentPage>
